<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<class name="de.fhg.fokus.hss.db.model.ApplicationServer" table="application_server">
	
	<id name="id">
		<generator class="native"/>
	</id>
	
	<property name="name" type="string" not-null="true" />
	<property name="server_name" type="string" not-null="true" length="255"/>
	<property name="default_handling" type="int" not-null="true" />
	<property name="service_info" type="string" not-null="true" length="255"/>
	<property name="diameter_address" type="string" not-null="true" length="255"/>
	<property name="rep_data_size_limit" type="int" not-null="true" />

    <property name="udr" type="short" />
	<property name="pur" type="short" />
	<property name="snr" type="short" />
	<property name="udr_rep_data" type="short"/>
	<property name="udr_impu" type="short" />
	<property name="udr_ims_user_state" type="short" />
	<property name="udr_scscf_name" type="short" />
	<property name="udr_ifc" type="short" />
	<property name="udr_location" type="short" />
	<property name="udr_user_state" type="short" />
	<property name="udr_charging_info" type="short" />
	<property name="udr_msisdn" type="short" /> 
	<property name="udr_psi_activation" type="short" />
	<property name="udr_dsai" type="short" />
	<property name="udr_aliases_rep_data" type="short" />
	<property name="pur_rep_data" type="short" />
	<property name="pur_psi_activation" type="short" />
	<property name="pur_dsai" type="short" />
	<property name="pur_aliases_rep_data" type="short" />
	<property name="snr_rep_data" type="short" />
	<property name="snr_impu" type="short" />
	<property name="snr_ims_user_state" type="short" />
	<property name="snr_scscf_name" type="short" />
	<property name="snr_ifc" type="short" />
	<property name="snr_psi_activation" type="short" />
	<property name="snr_dsai" type="short" />
	<property name="snr_aliases_rep_data" type="short" />
	
</class>
</hibernate-mapping>
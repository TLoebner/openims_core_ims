<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

	<!-- ================================================ Form Bean Definitions -->

	<form-beans>
		<form-bean name="DeleteForm" type="de.fhg.fokus.hss.web.form.DeleteForm"/>		
		
		<!-- IMPU -->
		<form-bean name="IMPU_Form" type="de.fhg.fokus.hss.web.form.IMPU_Form"/>
		<form-bean name="IMPU_SearchForm" type="de.fhg.fokus.hss.web.form.IMPU_SearchForm"/>

		<!-- IMPI -->		
		<form-bean name="IMPI_Form" type="de.fhg.fokus.hss.web.form.IMPI_Form"/>
		<form-bean name="IMPI_SearchForm" type="de.fhg.fokus.hss.web.form.IMPI_SearchForm"/>

		<!-- IMSU -->		
		<form-bean name="IMSU_Form" type="de.fhg.fokus.hss.web.form.IMSU_Form"/>
		<form-bean name="IMSU_SearchForm" type="de.fhg.fokus.hss.web.form.IMSU_SearchForm"/>
		
	</form-beans>


	<!-- ========================================= Global Exception Definitions -->

	<global-exceptions>
		<exception handler="de.fhg.fokus.hss.HssExceptionHandler"
			key="reason.error.all" type="java.lang.Exception" path="/error.jsp" />
	</global-exceptions>


	<!-- =========================================== Global Forward Definitions -->

	<global-forwards>
		<forward name="error" path="/pages/errorPage.jsp" />
	</global-forwards>

	<!-- =========================================== Action Mapping Definitions -->

	<action-mappings>
		<!-- IMPU -->
		<action path="/IMPU_Load" name="IMPU_Form" type="de.fhg.fokus.hss.web.action.IMPU_Load" validate="false">
			<forward name="success" path="/pages/user/impu.jsp" />
			<forward name="failure" path="/pages/errorPage.jsp"/>
		</action>
		
		<action path="/IMPU_Submit" name="IMPU_Form" type="de.fhg.fokus.hss.web.action.IMPU_Submit" input="/IMPU_Load.do" validate="true">
			<forward name="success" path="/pages/user/impu.jsp" />
			<forward name="failure" path="/pages/user/impu.jsp"/>
		</action>

		<action path="/IMPU_Search" name="IMPU_SearchForm" type="de.fhg.fokus.hss.web.action.IMPU_Search" validate="false">
			<forward name="success" path="/pages/user/impu_search_result.jsp" />
			<forward name="failure" path="/pages/errorPage.jsp"/>
		</action>
				
		<action path="/IMPU_Delete" name="DeleteForm" type="de.fhg.fokus.hss.web.action.IMPU_Delete" validate="false">
			<forward name="success" path="/IMPU_Search.do" />
			<forward name="failure" path="/pages/errorPage.jsp"/>
		</action>

		<!-- IMPI -->		
		<action path="/IMPI_Load" name="IMPI_Form" type="de.fhg.fokus.hss.web.action.IMPI_Load" validate="false">
			<forward name="success" path="/pages/user/impi.jsp" />
			<forward name="failure" path="/pages/errorPage.jsp"/>
		</action>
		
		<action path="/IMPI_Submit" name="IMPI_Form" type="de.fhg.fokus.hss.web.action.IMPI_Submit" input="/IMPI_Load.do" validate="true">
			<forward name="success" path="/pages/user/impi.jsp" />
			<forward name="failure" path="/pages/user/impi.jsp"/>
		</action>

		<action path="/IMPI_Search" name="IMPI_SearchForm" type="de.fhg.fokus.hss.web.action.IMPI_Search" validate="false">
			<forward name="success" path="/pages/user/impi_search_result.jsp" />
			<forward name="failure" path="/pages/errorPage.jsp"/>
		</action>
				
		<action path="/IMPI_Delete" name="DeleteForm" type="de.fhg.fokus.hss.web.action.IMPI_Delete" validate="false">
			<forward name="success" path="/IMPI_Search.do" />
			<forward name="success_impi_impu" path="/IMPI_Load.do" />
			<forward name="failure" path="/pages/errorPage.jsp"/>
		</action>

		<!-- IMSU -->
		<action path="/IMSU_Load" name="IMSU_Form" type="de.fhg.fokus.hss.web.action.IMSU_Load" validate="false">
			<forward name="success" path="/pages/user/imsu.jsp" />
			<forward name="failure" path="/pages/errorPage.jsp"/>
		</action>
		
		<action path="/IMSU_Submit" name="IMSU_Form" type="de.fhg.fokus.hss.web.action.IMSU_Submit" input="/IMSU_Load.do" validate="true">
			<forward name="success" path="/pages/user/imsu.jsp" />
			<forward name="failure" path="/pages/user/imsu.jsp"/>
		</action>

		<action path="/IMSU_Search" name="IMSU_SearchForm" type="de.fhg.fokus.hss.web.action.IMSU_Search" validate="false">
			<forward name="success" path="/pages/user/imsu_search_result.jsp" />
			<forward name="failure" path="/pages/errorPage.jsp"/>
		</action>
				
		<action path="/IMSU_Delete" name="DeleteForm" type="de.fhg.fokus.hss.web.action.IMSU_Delete" validate="false">
			<forward name="success" path="/IMSU_Search.do" />
			<forward name="failure" path="/pages/errorPage.jsp"/>
		</action>
		
	</action-mappings>


	<!-- ============================================= Controller Configuration -->

	<controller
		processorClass="org.apache.struts.tiles.TilesRequestProcessor" />

	<!-- ======================================== Message Resources Definitions -->

	<message-resources parameter="MessageResources" />


	<!-- =============================================== Plug Ins Configuration -->

	<!-- ======================================================= Tiles plugin -->
	<plug-in className="org.apache.struts.tiles.TilesPlugin">

		<!-- Path to XML definition file -->
		<set-property property="definitions-config"
			value="/WEB-INF/tiles-defs.xml" />
		<!-- Set Module-awareness to true -->
		<set-property property="moduleAware" value="true" />
	</plug-in>

	<!-- =================================================== Validator plugin -->

	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml" />
	</plug-in>

	<!-- 
		<plug-in className="de.gedas.bp.util.HibernatePlugIn">
		<set-property property="configFilePath"
		value="hibernate.cfg.xml" />
		<set-property property="storedInServletContext" value="true" />
		</plug-in>
		
	-->
</struts-config>


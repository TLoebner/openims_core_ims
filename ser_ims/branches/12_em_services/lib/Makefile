# variables to change

INCLUDES += -I$(CURDIR)
LIBS     += -L$(CURDIR)/cds -L$(CURDIR)/qsa
DEFS     += -Wall

####################################
# make rules

export LIBS
export DEFS
export INCLUDES

SUBDIRS=binrpc cds xcap presence lost

.PHONY: subdirs $(SUBDIRS) 

# clean install tags proper

subdirs:	$(SUBDIRS)

$(SUBDIRS):	
			@echo "Making $(MAKECMDGOALS) in $@" ; $(MAKE) $(MAKECMDGOALS) -C $@

all:	subdirs

proper:	clean

clean:	subdirs

install:	subdirs

